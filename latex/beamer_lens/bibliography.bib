file = {:home/alexandre/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Suyu et al. - 2014 - COSMOLOGY FROM GRAVITATIONAL LENS TIME DELAYS AND PLANCK DATA.pdf:pdf},
